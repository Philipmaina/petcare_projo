<div class="container-fluid" style="background-color: #eee;">

	<%= render '/all_other_partials/navbar_for_dashboard_stuff' %>

	<div class="row" style="position:relative ;height: 550px; background-color: #eee; ">

		<div class="col-md-2">


		</div>

		<div class="col-md-8 " style="height: 95% ; background-color:white ; padding: 20px 150px 20px 150px ;">
			<!-- we have a table then one row hold the div with the change email thing while the next div holds the change your password thing -->
			<!-- there are also small height rows which will allow for separation of content  -->
			<!-- ________________________ -->
			<!-- |  __________________  | -->
			<!-- |  |                |  | -->
			<!-- |  |________________|  | -->
			<!-- |______________________| -->
			<!-- |______________________| -->
			<!-- |  __________________  | -->
			<!-- |  |                |  | -->
			<!-- |  |________________|  | -->
			<!-- |______________________| -->
			<!-- |______________________| -->
			<!-- |                      | -->
			<!-- |                      | -->
			<!-- |______________________| -->

			<table>

				<tr>

					<td style="border: 1px solid #008c9d;background-color:#e5f6f8;padding: 10px 10px 10px 60px ; ">

						<div>
							<!-- within the div i create another table to arrange stuff well - note i havent indicated this on the diagram above -->
							<%= form_tag( update_petsitter_email_and_password_from_account_path(@petsitter.id) ) do %>
								<!-- this styling is to make the textboxes shorter and not occupy entire length -->
								<table style="position:relative;width: 60% ;">
									<tr>

										<td>
											<h4>
												Change your email
											</h4>
										</td>

									</tr>

									<tr>

										<td style="font-size:13px;">
											<i>
												Current email: <%= @petsitter.personal_email %>
											</i>
										</td>

									</tr>

									<tr>

										<td>
											<div class="form-group">

												<%= email_field_tag :personal_email , nil , class: "form-control" , placeholder: 'New email'  %>
											</div>


										</td>

									</tr>

									<tr>
										
										<td>

											<div class="form-group">

												<%= email_field_tag :confirm_personal_email , nil , class: "form-control" , placeholder: 'Confirm email'  %>
											</div>


										</td>

									</tr>


									<tr>
										
										<td>

											<p class="text-left">
												<%= submit_tag "Save email changes" , class:"btn btn-success"  %>
											</p>


										</td>

									</tr>


								</table>
							<% end %>

						</div>

					</td>


				</tr>

				<!-- this allows for spacing between the divs above for email change and below for password change -->
				<tr>
					<td style="padding-bottom:20px;"></td>
				</tr>


				<tr>

					<td style="border: 1px solid #008c9d;background-color:#e5f6f8;padding: 10px 10px 10px 60px ; ">

						<div>

							<!-- within the div i create another table to arrange stuff well - note i havent indicated this on the diagram above -->
							<%= form_tag( update_petsitter_email_and_password_from_account_path(@petsitter.id) ) do %>
								<!-- this styling is to make the textboxes shorter and not occupy entire length -->
								<table style="position:relative;width: 60% ;">
									<tr>

										<td>
											<h4>
												Change your password
											</h4>
										</td>

									</tr>

									<tr>

										<td>
											<div class="form-group">

												<%= password_field_tag :password , nil , class: "form-control" , placeholder: "New password"  %>
											</div>


										</td>

									</tr>

									<tr>
										
										<td>

											<div class="form-group">

												<%= password_field_tag :confirm_password , nil , class: "form-control" , placeholder: "Confirm password" %>
											</div>


										</td>

									</tr>


									<tr>
										
										<td>

											<p class="text-left">
												<%= submit_tag "Save password changes" , class:"btn btn-success"  %>
											</p>


										</td>

									</tr>


								</table>
							<% end %>


						</div>

					</td>


				</tr>


				<tr>
					<td style="padding-bottom:20px;"></td>
				</tr>


				<tr>

					<td >

						<div>

							<%= link_to petsitter_path(@petsitter.id) , method: :delete , data: { confirm: "Are you sure?" } do %>

								<button type="button" class="btn btn-danger">Delete Account</button>

							<% end %>

						</div>


					</td>

				</tr>



			</table>


		</div>

		<div class="col-md-2">


		</div>









	</div>








</div>

<script type="text/javascript">

	$("li#tab_for_account_details").addClass("active") ;


</script>